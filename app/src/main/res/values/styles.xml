<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="permission_tips">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="permission_tips_title_text" parent="permission_tips">
        <item name="android:layout_marginTop">@dimen/permission_tips_title_margin_top</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/permission_tips_title_text_size</item>
        <item name="android:textColor">@color/permission_tips_title_text_color</item>
    </style>

    <style name="permission_tips_description_text" parent="permission_tips">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/permission_tips_margin_left</item>
        <item name="android:layout_marginRight">@dimen/permission_tips_margin_right</item>
        <item name="android:layout_marginTop">@dimen/permission_tips_to_title_margin_top</item>
        <item name="android:textSize">@dimen/permission_tips_text_size</item>
        <item name="android:textColor">@color/permission_tips_title_text_color</item>
    </style>

    <style name="permission_tips_way_text" parent="permission_tips">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/permission_tips_margin_left</item>
        <item name="android:layout_marginRight">@dimen/permission_tips_margin_right</item>
        <item name="android:layout_marginTop">@dimen/permission_tips_way_margin_top</item>
        <item name="android:textSize">@dimen/permission_tips_text_size</item>
        <item name="android:textColor">@color/permission_tips_content_text_color</item>
    </style>

    <style name="permission_tips_button_text" parent="permission_tips">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/permission_tips_margin_left</item>
        <item name="android:layout_marginRight">@dimen/permission_tips_margin_right</item>
        <item name="android:layout_marginTop">@dimen/permission_tips_way_margin_top</item>
        <item name="android:textSize">@dimen/permission_tips_text_size</item>
        <item name="android:textColor">@color/permission_tips_content_text_color</item>
    </style>

    <style name="permission_tiops_deny" parent="permission_tips">
        <item name="android:layout_marginLeft">@dimen/permission_tips_margin_left</item>
        <item name="android:layout_marginRight">@dimen/permission_tips_margin_right</item>
        <item name="android:layout_marginTop">@dimen/permission_tips_margin_top</item>
        <item name="android:textSize">@dimen/permission_tips_text_size</item>
        <item name="android:textColor">@color/permission_tips_content_text_color</item>
    </style>

    <style name="permission_deny_image_logo">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_width">@dimen/permission_tips_image_logo_width</item>
        <item name="android:layout_height">@dimen/permission_tips_image_logo_height</item>
        <item name="android:layout_marginTop">@dimen/permission_tips_deny_image_margin_top</item>
    </style>




    <style name="RulerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingLeft">20dp</item>

        <item name="guideScaleTextSize">40dp</item>
        <item name="graduatedScaleWidth">4px</item>
        <item name="graduatedScaleBaseLength">60dp</item>
        <item name="scaleColor">@color/colorRulerViewScale</item>

        <item name="pointerRadius">40dp</item>
        <item name="pointerStrokeWidth">4px</item>
        <item name="pointerColor">@color/colorRulerViewPointer</item>

        <item name="labelTextSize">20dp</item>
        <item name="defaultLabelText">@string/ruler_view_default_text</item>
        <item name="labelColor">@color/colorRulerViewLabel</item>
        <item name="backgroundColor">@color/colorRulerViewBackground</item>
    </style>
</resources>
